
<div class="category-index">
<div>
  <div class="nav background">
  <%= link_to categories_path, class: "left-arrow-link background" do %>
    <%= image_tag 'left-arrow.svg', class: "left-arrow background" %>
    <% end %>
  <p class="registration background">ITEMS</p>
  <%= link_to "SIGN OUT", destroy_user_session_path, data:{turbo_method: :delete}, class: "sign-out-btn background" %>
  </div>
  
  
  <div class="total">
    <p>total budget</p>
    <p>Le <%= format_amount(@category.items.sum(:amount)) %></p>
  </div>
  <% @items.each do |item| %>
  <div class="category-list-div">
    <div class="category-list">
    <% if item.icon.attached? %>
    <%= image_tag item.icon, class: "img white" %>
    <% else %>
    <%= image_tag 'food.svg', class: "img white" %>
<% end %>
      <div class="text white">
        <div class="food-description white">
          <p class="white"><%= item.name%></p><br>
          <p class="white">Le <%= format_amount(item.amount) %></p>
        </div>
        <p class="white date"><%= item.created_at.strftime("%d %B %Y") %></p>
      </div>
    </div>
  </div>
  <% end %>
  </div>
  <%= link_to 'Add Item', new_category_item_path(@category), class: "add-category" %>
</div>

